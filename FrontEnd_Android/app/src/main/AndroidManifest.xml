<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hajar.firsttry">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_cart_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cart_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp" android:label="Register"/>
        <activity android:name=".Home" android:label="Products"/>
        <activity android:name=".Basket" android:label="My Cart" />
        <activity android:name=".Catalog" />
        <activity
            android:name=".DeliverHome"
            android:label="@string/title_activity_deliver_home" />
        <activity android:name=".Productdetails" android:label="Details"/>
        <activity android:name=".Cartdb" android:label="My Cart"/>
        <activity android:name=".MyToDeliv"  android:label="My Work" />
    </application>

</manifest>